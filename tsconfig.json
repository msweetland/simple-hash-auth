{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "strict": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "types": ["@types/jest", "@types/node"],
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
